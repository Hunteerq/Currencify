<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/fourthPrimary">

    <TextView
            android:text="@string/title_settings"
            android:layout_width="323dp"
            android:layout_height="65dp" android:id="@+id/settingsTitleText" android:textSize="48sp"
            android:textAlignment="center" android:layout_alignParentEnd="true" android:layout_marginEnd="48dp"
            android:layout_alignParentStart="true" android:layout_marginStart="40dp" android:layout_marginTop="45dp"
            android:layout_alignParentTop="true"/>
    <Spinner
            android:layout_width="200dp"
            android:id="@+id/settingsOptionSpinner"
            android:layout_marginEnd="14dp" android:spinnerMode="dialog"
            android:layout_height="82dp"
            android:layout_marginTop="64dp" android:layout_below="@+id/settingsOptionText"
            android:layout_alignEnd="@+id/settingsOptionText"/>
    <TextView
            android:text="@string/settings_option"
            android:layout_width="200dp"
            android:layout_height="82dp" android:id="@+id/settingsOptionText"
            android:textSize="26sp"
            android:textAlignment="center"
            android:layout_marginTop="93dp"
            android:layout_below="@+id/settingsTitleText" android:layout_marginEnd="55dp"
            android:layout_alignEnd="@+id/settingsTitleText"/>
</RelativeLayout>