<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/thirdPrimary"
>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/currencyTitle" android:textSize="48sp"
            android:layout_marginTop="62dp" android:layout_alignParentTop="true" android:textAlignment="center"/>
    <ListView
            android:layout_width="match_parent"
            android:layout_height="553dp" android:layout_marginTop="51dp" android:layout_below="@+id/currencyTitle"
            android:layout_alignParentEnd="true" android:layout_marginEnd="0dp" android:layout_alignParentStart="true"
            android:layout_marginStart="0dp" android:id="@+id/currenciesListView"/>
</RelativeLayout>