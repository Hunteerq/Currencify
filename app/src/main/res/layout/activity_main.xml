<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/thirdPrimary"
        tools:context=".MainActivity" android:id="@+id/hello_view">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/fourthPrimary"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="1.0"
            android:textSize="48sp"
            app:layout_constraintBottom_toTopOf="@+id/title_text" app:layout_constraintHorizontal_bias="0.497"
            android:fontFamily="@font/monda" android:id="@+id/hellot_text" android:textAlignment="center"
            android:text="@string/hello_title"/>
    <TextView
            android:text="Currencify"
            android:textColor="@color/fourthPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/title_text" android:textSize="48sp"
            android:layout_marginBottom="392dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="24dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="24dp"
            app:layout_constraintStart_toStartOf="parent" android:fontFamily="@font/monda"
            android:textAlignment="center"/>
    <Button
            android:text="@string/login"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:id="@+id/button" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="128dp"
            style="@style/Widget.AppCompat.Button.Colored" android:background="@color/fourthPrimary"
            android:textColor="#000" android:fontFamily="@font/monda" android:layout_marginEnd="24dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.018"
            android:layout_marginTop="40dp" app:layout_constraintTop_toBottomOf="@+id/button2"
            android:textAlignment="center" android:onClick="buttonOnClickGoToLogin"/>
    <Button
            android:text="@string/register"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:id="@+id/button2"
            android:background="@color/fourthPrimary"
            android:fontFamily="@font/monda"
            android:layout_marginEnd="24dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="24dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="148dp"
            app:layout_constraintHorizontal_bias="0.497" app:layout_constraintTop_toBottomOf="@+id/title_text"
            android:textAlignment="center" android:onClick="buttonOnClickGoToRegister"/>

</android.support.constraint.ConstraintLayout>